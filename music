#!/bin/sh

case "$1" in 
    prev) 
        mpc prev 
        notify-send "Playing: $(mpc -f '%artist% (%album%)-%title%' | sed 1q )
$(mpc -f '%file%' | sed 1q)"
        ;;
    next) mpc next
        notify-send "Playing: $(mpc -f '%artist% (%album%)-%title%' | sed 1q )
$(mpc -f '%file%' | sed 1q)"
        ;;
    toggle) mpc toggle && mpc | sed -n '/\[/p' | sed 's/\[//; s/\].*//' | xargs -I @@ notify-send "mpc @@" ;;
    *) exit ;;
esac
